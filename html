<!DOCTYPE html>
<html>
<head>
    <title>Teachable Machine 手勢辨識遊戲</title>
    <style>
        img {
            width: 300px;
            height: auto;
            display: none;
        }
    </style>
</head>
<body>
    <h1>手勢辨識魔法石遊戲</h1>
    <video id="webcam" autoplay width="320" height="240"></video>
    <div id="label">辨識中...</div>
    <img id="fireImg" src="魔法石-01.jpg">
    <img id="waterImg" src="魔法石-02.jpg">
    <img id="grassImg" src="魔法石-03.jpg">

    <script src="https://cdnjs.cloudflare.com/ajax/libs/p5.js/1.4.0/p5.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/@teachablemachine/image@latest"></script>
    <script>
        const URL = "https://lana130-tseng.github.io/teachable-project/""; 
        let model, webcam;

        async function init() {
            const modelURL = URL + "model.json";
            const metadataURL = URL + "metadata.json";

            model = await tmImage.load(modelURL, metadataURL);
            webcam = new tmImage.Webcam(320, 240, true);
            await webcam.setup();
            await webcam.play();
            window.requestAnimationFrame(loop);

            document.getElementById("webcam").appendChild(webcam.canvas);
        }

        async function loop() {
            webcam.update();
            await predict();
            window.requestAnimationFrame(loop);
        }

        async function predict() {
            const prediction = await model.predict(webcam.canvas);
            const label = prediction[0].label;

            document.getElementById("label").innerText = `辨識結果：${label}`;

            // 隱藏所有圖片
            document.getElementById("fireImg").style.display = "none";
            document.getElementById("waterImg").style.display = "none";
            document.getElementById("grassImg").style.display = "none";

            // 根據辨識結果顯示對應的圖片
            if (label === "火") document.getElementById("fireImg").style.display = "block";
            if (label === "水") document.getElementById("waterImg").style.display = "block";
            if (label === "艸") document.getElementById("grassImg").style.display = "block";
        }

        init();
    </script>
</body>
</html>
